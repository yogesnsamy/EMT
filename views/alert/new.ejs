<% include ../partials/header %>
<div class="row">
  <h1>New</h1>
  <form class="col s12" action="/alert" method="POST">
    <div class="row">
      <div class="input-field col s6">
        <i class="material-icons prefix">account_circle</i>
        <input name="fname" id="fname" type="text" class="validate" />
        <label for="fname">First Name</label>
      </div>

      <div class="input-field col s6">
        <i class="material-icons prefix">phone</i>
        <input name="contact" id="contact" type="tel" class="validate" />
        <label for="contact">Telephone</label>
      </div>
      <div class="input-field col s12">
        <select name="channel">
          <option value="" disabled selected>Choose a channel to alert</option>
          <option value="general">General</option>
          <option value="random">Random</option>
          <option value="subangjaya">Subang Jaya</option>
          <option value="sunway">Sunway</option>
          <option value="klang">Klang</option>
        </select>
        <label>Select a channel to alert</label>
      </div>
      <div class="row">
        <div class="row">
          <div class="input-field col s12">
            <textarea
              name="message"
              id="message"
              class="materialize-textarea"
            ></textarea>
            <label for="message">Message</label>
          </div>
        </div>
      </div>
      <button class="btn waves-effect waves-light" type="submit">
        Submit
      </button>
    </div>
  </form>
</div>
<% include ../partials/footer %>
